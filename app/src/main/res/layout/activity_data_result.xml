<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataResult">

    <!--The graph of student grades-->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/student_grade_graph"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.github.mikephil.charting.charts.BarChart>

    <!--The LinearLayout that contains the buttons to clear and show ratios respectively-->
    <LinearLayout
        android:id="@+id/data_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/clear_button_text"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ratio_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="@string/ratio_button_text"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>